{
  "name": "dota-notifier-desktop",
  "private": true,
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "build": "parcel build src/*.html --target electron --public-url .",
    "dev": "concurrently 'yarn watch' 'electron .'",
